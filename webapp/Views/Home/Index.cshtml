@{
    Layout = "../Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Home Page";
}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="width:100%; height: inherit;" src="~/images/s1.jpg" class="img-fluid d-block" alt="First slide">
        </div>
        <div class="carousel-item">
            <img style=" width: 100%; height:inherit;" src="~/images/s2.jpeg" class="img-fluid d-block" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img style=" width: 100%; height:inherit;" src="~/images/s3.jpg" class="img-fluid d-block" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img style=" height:inherit;   width: 100%;" src="~/images/s4.jpg" class="img-fluid d-block" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img style="height: inherit; width: 100%;" src="~/images/s5.png" class="img-fluid  d-block" alt="Fifth slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <main role="main" class="pb-3">

        @if (ViewBag.x != null)
        {
            <div class="alert alert-success  text-center">
                <strong>@ViewBag.x</strong>
            </div>
        }

        @if (ViewBag.lgout != null)
        {
            @if (ViewBag.lgout == true)
            {
                <div class="alert alert-danger  text-center">
                    <strong>@ViewBag.data</strong>
                </div>
            }
        }
        
        <div class="text-center">
            <h1 class="display-4"><strong>Welcome to Course Share</strong></h1>
            <h1 class="display-4">Course Categories</h1>
        </div>

        <div class="row">
            <vc:category-summary name="Development" description="Mobile development, Game development, Programming Languages, Database design and much more..." filename="development.jpg"></vc:category-summary>
            <vc:category-summary name="Photography & Video" description="Digital photography, Portrait photograhy, Commercial photograhy, Video Design and much more..." filename="s1.jpg"></vc:category-summary>
            <vc:category-summary name="Teaching & Academic" description="Engineering, Humanities, Math, Science, Online Education, Language learning and much more..." filename="s2.jpeg"></vc:category-summary>
            <vc:category-summary name="Development" description="Mobile development, Game development, Programming Languages, Database design and much more..." filename="s3.jpg"></vc:category-summary>
            <vc:category-summary name="Photography & Video" description="Digital photography, Portrait photograhy, Commercial photograhy, Video Design and much more..." filename="s4.jpg"></vc:category-summary>
            <vc:category-summary name="Teaching & Academic" description="Engineering, Humanities, Math, Science, Online Education, Language learning and much more..." filename="s5.png"></vc:category-summary>
        </div>

    </main>
</div>

