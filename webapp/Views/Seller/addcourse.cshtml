@{
    Layout = "../Shared/_Layout2.cshtml";
}

@{
    ViewData["Title"] = "Seller portal";
}

<div class="container">
    <main role="main" class="pb-3">
        <br>
        <h1 class="text-center text-info">Add Course</h1>
        <br>
        <form enctype="multipart/form-data" method="POST" action="/Seller/addcourse">
            <div class="form-group">
                <label for="coursename">Course name</label>
                <input type="text" name="coursename" class="form-control" id="coursename" placeholder="course name" required />
            </div>
            <div class="form-group">
                <label for="coursedescription">Course Description</label>
                <input type="text" name="coursedescription" class="form-control" id="coursedescription" placeholder="course descrition" required />
            </div>

            <div class="form-group">
                <label for="categorytype">Course Category</label>
                <select id="categorytype" name="categorytype" class="form-select" aria-label="Default select example">
                    <option selected value="Development">Development</option>
                    <option value="Photography & Video">Photography & Video</option>
                    <option value="Teaching & Academic">Teaching & Academic</option>
                    <option value="Design">Design</option>
                    <option value="Health & Fitness">Health & Fitness</option>
                    <option value="Business">Business</option>
                </select>
            </div>
                

            <label for="formFileLg" class="form-label">Course thumbnail</label>
            <input class="form-control form-control-lg" id="thumbfile" name="postedFiles" type="file" required/>

            <br/>

            <button type="submit" class="btn btn-primary">Add course</button>
        </form>

        @if(ViewBag.sMessage != null)
        {
            <div class="alert alert-success remMarginBottom text-center">
                <strong>@Html.Raw(ViewBag.sMessage)</strong>
            </div>
        }

        @if(ViewBag.Message != null)
        {
            <div class="alert alert-danger remMarginBottom text-center">
                <strong>@Html.Raw(ViewBag.Message)</strong>
            </div>
        }

    </main>
</div>